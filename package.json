{
    "name": "IgniteUIIntelliSense",
    "displayName": "Ignite UI IntelliSense",
    "description": "Enables IntelliSense for Ignite UI controls",
    "version": "0.0.1",
    "publisher": "Infragistics",
    "icon": "images/ignite-white.png",
	"galleryBanner": {
		"color": "#000000",
		"theme": "dark"
	},
    "homepage": "",
    "repository": {
		"type": "git",
		"url": "https://github.com/IgniteUI/ignite-ui-IntelliSense-for-VS-Code"
	},
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "extension.sayHello",
            "title": "IgniteUI IntelliSense"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}